{
    "extends": "@repo/typescript-config/base.json",
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ES2023",
        "rootDir": "./src",
        "outDir": "./dist",
        "typeRoots": [
            "./node_modules/@types",
            "./@types"
        ],
        "noEmit": true,
        "esModuleInterop": true,
        "allowImportingTsExtensions": true,
    }
}